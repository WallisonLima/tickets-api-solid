generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password_hash String

  created_at    DateTime  @default(now())

  tickets       Ticket[]

  company       Company  @relation(fields: [company_id], references: [id])
  company_id    String

  @@map("users")
}

model Ticket{
  id           String    @id @default(uuid())
  title        String
  description  String
  impact_level String

  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  user         User     @relation(fields: [user_id], references: [id])
  user_id      String

  company      Company  @relation(fields: [company_id], references: [id])
  company_id   String

  @@map("tickets")
}

model Company {
  id      String    @id @default(uuid())
  title   String

  tickets Ticket[]
  users   User[]

  @@map("companys")
}